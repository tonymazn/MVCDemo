<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
				   namespace="nHibernateMapping.Domain"
				   assembly="nHibernateMapping">

	<class name="nHibernateMapping.Domain.Product, nHibernateMapping" table="Product" >
		<!-- Primary Key(s) -->
		<id name="ProductId">
			<generator class="identity" />
		</id>

		<property name="ProductName" />
		<property name="IntroductionDate"/>
		<property name="Cost"/>
		<property name="Price"/>
		<property name="IsDiscontinued"/>
	</class>
</hibernate-mapping>
